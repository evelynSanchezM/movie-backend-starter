{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "apt-get update && apt-get install -y curl jq && chmod +x load-data.sh",
    "startCommand": "./load-data.sh"
  },
  "deploy": {
    "startCommand": "./load-data.sh",
    "restartPolicyType": "ON_FAILURE"
  }
}